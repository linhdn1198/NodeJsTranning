<div class="row">
    <div class="col-sm-12">
        <a href="/me/stored/courses">My Course</a>
        <h4>Trash courses</h4>
        <table class="table table-striped table-border table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.image}}</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-success btn-restore" data-id="{{this._id}}">Restore</button>
                                <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#modelId" data-id="{{this._id}}">Remove</button>
                            </td>
                        </tr>
                    {{else}}
                        <tr>
                            <td class="text-center" colspan="4">
                                No trash course. <a href="/me/stored/courses">My course</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
        </table>
    </div>
</div>

<form id="form" method="post"></form>

<!-- Modal -->
<div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" id="submitForm">Remove</button>
            </div>
        </div>
    </div>
</div>

<script>
    window.addEventListener('DOMContentLoaded', function () {
        $('#modelId').on('show.bs.modal', function (event) {
            const button = $(event.relatedTarget);
            const id = button.data('id');
            $('#form').attr('action', `/courses/${id}/force?_method=DELETE`);         
        });

        $('#submitForm').on('click', function() {
            $('#form').submit();
        });

        $('.btn-restore').on('click', function() {
            const id = $(this).data('id');
            $('#form').attr('action', `/courses/${id}/restore?_method=PATCH`).submit();
        });
    })
</script>