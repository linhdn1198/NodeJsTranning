<div class="row">
    <div class="col-sm-12">
        <h4>My courses</h4>
        <table class="table table-striped table-border table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>{{this.image}}</td>
                            <td>
                                <a href="/courses/{{this._id}}/edit" class="btn btn-sm btn-warning">Edit</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
        </table>

    </div>
</div>
