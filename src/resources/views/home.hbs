<div class="row">
    {{#each courses}}
    <div class="col-sm-4">
            <a href="/courses/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            </a>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{this.name}}</h4>
                <p class="card-text">{{this.description}}</p>
                <a href="/courses/{{this.slug}}" class="btn btn-primary">Detail</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
